{
   "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es2022",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "services/jwtUtils.js"],
  "exclude": ["node_modules"]
}